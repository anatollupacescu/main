#!/bin/bash
# debug
# set -x
EXAMPLE=$1
EXAMPLE_PATH_BEGIN=com/tangosol/examples

cd `dirname $0`/..
EXAMPLES_DIR=`pwd`

if [ -z $EXAMPLE ]; then
    echo usage: build example 
    echo where \"example\" is a directory under com.tangosol.examples
    echo
    echo example: build contacts
    echo
    echo current directories: $(ls ./src/$EXAMPLE_PATH_BEGIN)
    exit 1
fi

if [ -z $COHERENCE_HOME ]; then
    echo COHERENCE_HOME is not set!
    echo set COHERENCE_HOME to a Coherence 4.2 or later installation.
    exit 1
fi

if [ -z $JAVA_HOME ]; then
    echo JAVA_HOME is not set!
    echo set JAVA_HOME to a JDK 1.4.2 or greater installation.
    exit 1
fi

CLASSES_DIR=$EXAMPLES_DIR/classes
CP=$COHERENCE_HOME/lib/coherence.jar:$CLASSES_DIR
MODEL_PATH=$EXAMPLE_PATH_BEGIN/model
EXAMPLE_PATH=$EXAMPLE_PATH_BEGIN/$EXAMPLE

# Perform build
echo building $EXAMPLE from $EXAMPLE_PATH ...

mkdir -p $CLASSES_DIR
$JAVA_HOME/bin/javac -d $CLASSES_DIR -source 1.4 -cp $CP $(find $EXAMPLES_DIR/src/$MODEL_PATH -name "*.java")
$JAVA_HOME/bin/javac -d $CLASSES_DIR -source 1.4 -cp $CP $(find $EXAMPLES_DIR/src/$EXAMPLE_PATH -name "*.java")

echo To run this example, execute \'run $EXAMPLE\'

