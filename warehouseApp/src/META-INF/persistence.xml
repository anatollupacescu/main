<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	<persistence-unit name="swat" transaction-type="RESOURCE_LOCAL">
	 	
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<!--
		<jta-data-source>jdbc/__default__pm</jta-data-source>
		-->
		
		<class>com.funny.entity.Client</class>
		<class>com.funny.entity.Employee</class>
		<class>com.funny.entity.Item</class>
		<class>com.funny.entity.ItemType</class>
		<class>com.funny.entity.Job</class>
		
		<properties>
			<property name="eclipselink.jdbc.platform" value="org.eclipse.persistence.platform.database.DerbyPlatform"/>
      		<property name="eclipselink.target-database" value="Derby"/>  

			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>      
			<property name="javax.persistence.jdbc.url" value="jdbc:derby:../databases/swat;create=true" />
			<property name="javax.persistence.jdbc.user" value="swat" />
			<property name="javax.persistence.jdbc.password" value="swat" />
			
			<property name="eclipselink.target-server" value="SunAS9"/>
			<property name="eclipselink.logging.level" value="FINEST"/>    

			<!-- EclipseLink should create the database schema automatically -->
			<!-- <property name="eclipselink.ddl-generation" value="create-tables" /> -->
			<!-- <property name="eclipselink.ddl-generation" value="drop-and-create-tables" /> --> 
			<!-- <property name="eclipselink.ddl-generation.output-mode" value="both" /> -->
		</properties>

	</persistence-unit>
</persistence>

